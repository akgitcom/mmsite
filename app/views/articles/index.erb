<div class="article">
  <ul>
    <% @articles.each do |b|%>
        <li><%= link_to b.title,{:controller => "articles",:action => "show",:id => "#{b.id}", :format=>"html"} %>    <%= link_to "edit",{:controller => "articles",:action => "edit",:id=>b.id} %>  |  <%= link_to "destroy",{:controller => "articles",:action => "destroy",:id=>b.id},:method => 'delete' %></li>

    <% end %>
  </ul>
<%= paginate @articles, :theme=>'long' %>
</div>