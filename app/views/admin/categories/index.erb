<div class="category">
  <ul>
    <% @categories.each do |b|%>
        <li>
          <%= image_tag(b.img_url(:thumb)) if b.img? %><%= link_to b.title,{:controller => "categories",:action => "show",:id => "#{b.id}", :format=>"html"} %>
          <%= link_to "edit",{:controller => "categories",:action => "edit",:id=>b.id} %>
          <%= link_to "destroy",{:controller => "categories",:action => "destroy",:id=>b.id},:method => 'delete' %>
        </li>
    <% end %>
  </ul>
<%= paginate @categories %>
</div>